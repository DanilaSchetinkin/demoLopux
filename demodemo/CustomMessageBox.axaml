<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="150"
        x:CompileBindings="False"
        x:Class="demodemo.CustomMessageBox"
        Title="Сообщение"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        MinWidth="300" MaxWidth="500"
        MinHeight="120">
    <Grid RowDefinitions="*,Auto" Margin="15">
        
        <TextBlock Name="MessageTextBlock" 
                   Grid.Row="0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <Button Name="OkButton" Content="OK" IsVisible="False" Click="Button_Click"/>
            <Button Name="YesButton" Content="Да" IsVisible="False" Click="Button_Click"/>
            <Button Name="NoButton" Content="Нет" IsVisible="False" Click="Button_Click"/>
        </StackPanel>
        
    </Grid>
</Window>